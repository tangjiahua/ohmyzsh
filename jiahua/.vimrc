" 设置编码
set fileencodings=utf-8,ucs-bom,gb18030,gbk,gb2312,cp936
set termencoding=utf-8
set encoding=utf-8

" 显示行号
set number

" 突出显示当前行
" set cursorline

" 启动鼠标
set mouse=a

" 显示括号匹配
set showmatch

set tabstop=4
set shiftwidth=4
set autoindent

" 设置粘贴模式
set paste

set laststatus=2

set ruler

filetype plugin indent on

set clipboard^=unnamed,unnamedplus
